<launch>

  <!-- Load joint controller configurations from YAML file to parameter server -->
  <rosparam file="$(find baxter_control)/config/baxter_controllers.yaml" command="load"/>

  <!-- load the controllers -->
  <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false"
	output="screen" ns="/robot" args=" joint_state_controller					   
					   left_joint_position_controller
					   right_joint_position_controller
					   " />

  <!-- convert joint states to TF transforms -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"
	respawn="false" output="screen">
    <remap from="/joint_states" to="/robot/joint_states" />
  </node>

  <!-- load trajectory controller -->
  <node name="baxter_trajectory_controller" pkg="baxter_interface" type="trajectory_controller.py"
	respawn="false" output="screen"/>

  <!-- Load gripper controller -->
  <!--node name="baxter_gripper_controller" pkg="baxter_gripper_controller" type="gripper_action_server" 
	respawn="false" output="screen" /-->
  
</launch>
